{
  "name": "pea-plugins",
  "description": "Plugins to custom Pea config",
  "scripts": {
    "build": "lerna run --parallel --stream build",
    "build:watch": "lerna run --parallel --stream build:watch",
    "format": "prettier --write \"packages/**/*/src/**/*.{js,ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,__tests__}/*.{js,ts,tsx}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "rules"
  ],
  "author": "forsigner",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/fetch-mock": "^7.3.1",
    "@types/jest": "^24.0.18",
    "coveralls": "^3.0.6",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  }
}
